<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Редактировать"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_done"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/icon_done"
                app:tint="@color/white" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/circular_bg"
            android:backgroundTint="@color/primary"
            android:scaleType="centerCrop"
            android:src="@drawable/person_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_toolbar" />


        <ImageButton
            android:id="@+id/btn_edit_photo"
            android:src="@drawable/icon_edit"
            android:background="@drawable/circular_button_background"
            app:layout_constraintEnd_toEndOf="@+id/iv_profile_pic"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profile_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:tint="@color/primary" />


        <ImageView
            android:id="@+id/iv_city"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_city"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_city_header"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tv_city_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Город проживания"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_city"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_pic" />

        <EditText
            android:id="@+id/et_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Введите город проживания"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:inputType="text"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_city_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_city_header" />

        <View
            android:id="@+id/city_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_city"
            app:layout_constraintTop_toBottomOf="@+id/et_city" />

        <ImageView
            android:id="@+id/iv_birth_date"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_birth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_birth_date_header"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tv_birth_date_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Дата рождения"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_birth_date"
            app:layout_constraintTop_toBottomOf="@+id/city_divider" />

        <EditText
            android:id="@+id/et_birth_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Введите дату рождения"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:inputType="date"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_birth_date_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_birth_date_header" />

        <View
            android:id="@+id/birth_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_birth_date"
            app:layout_constraintTop_toBottomOf="@+id/et_birth_date" />

        <ImageView
            android:id="@+id/iv_zodiak"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_zodiak"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_zodiak_header"
            app:tint="@color/primary" />


        <TextView
            android:id="@+id/tv_zodiak_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Знак зодиака"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_zodiak"
            app:layout_constraintTop_toBottomOf="@+id/birth_divider" />

        <TextView
            android:id="@+id/tv_zodiak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Нет информации"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_zodiak_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_zodiak_header" />


        <View
            android:id="@+id/zodiak_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_zodiak"
            app:layout_constraintTop_toBottomOf="@+id/tv_zodiak" />


        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_about_header"
            app:tint="@color/primary" />


        <TextView
            android:id="@+id/tv_about_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="О себе"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_zodiak"
            app:layout_constraintTop_toBottomOf="@+id/zodiak_divider" />

        <EditText
            android:id="@+id/et_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Расскажите о себе"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_about_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_about_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>