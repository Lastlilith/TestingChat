<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.fragments.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/icon_edit"
                app:tint="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/circular_bg"
            android:backgroundTint="@color/primary"
            android:scaleType="centerCrop"
            android:src="@drawable/person_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_toolbar" />


        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_phone"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_phone_header"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tv_phone_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="Phone number"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_phone"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_pic" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+79147220023"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_phone_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_header" />

        <View
            android:id="@+id/phone_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_phone_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

        <ImageView
            android:id="@+id/iv_nickname"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/person_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_nickname_header"
            app:tint="@color/primary" />


        <TextView
            android:id="@+id/tv_nickname_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Nickname"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_nickname"
            app:layout_constraintTop_toBottomOf="@+id/phone_divider" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lastlilith"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_nickname_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickname_header" />

        <View
            android:id="@+id/nickname_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_nickname"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickname" />

        <ImageView
            android:id="@+id/iv_city"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_city"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_city_header"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tv_city_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="City"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_nickname"
            app:layout_constraintTop_toBottomOf="@+id/nickname_divider" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No information"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_city_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_city_header" />

        <View
            android:id="@+id/city_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_city"
            app:layout_constraintTop_toBottomOf="@+id/tv_city" />

        <ImageView
            android:id="@+id/iv_birth_date"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_birth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_birth_date_header"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tv_birth_date_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Date of Birth"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_birth_date"
            app:layout_constraintTop_toBottomOf="@+id/city_divider" />

        <TextView
            android:id="@+id/tv_birth_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No information"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_birth_date_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_birth_date_header" />

        <View
            android:id="@+id/birth_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_birth_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_birth_date" />

        <ImageView
            android:id="@+id/iv_zodiak"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_zodiak"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_zodiak_header"
            app:tint="@color/primary" />


        <TextView
            android:id="@+id/tv_zodiak_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Zodiac sign"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_zodiak"
            app:layout_constraintTop_toBottomOf="@+id/birth_divider" />

        <TextView
            android:id="@+id/tv_zodiak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No information"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_zodiak_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_zodiak_header" />


        <View
            android:id="@+id/zodiak_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_zodiak"
            app:layout_constraintTop_toBottomOf="@+id/tv_zodiak" />


        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_about_header"
            app:tint="@color/primary" />


        <TextView
            android:id="@+id/tv_about_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="About me"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_zodiak"
            app:layout_constraintTop_toBottomOf="@+id/zodiak_divider" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No information"
            android:textColor="@color/black"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_about_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_about_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>